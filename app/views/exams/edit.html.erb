<h1>Edit exam format</h1>
<div class="row">
  <div class="span6 offset3">
    <%= nested_form_for @exam do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      Subject:
      <h4><%= @exam.subject.name %></h4>
      Name:
      <%= f.text_field :name %>
      Duration (minutes):
      <%= f.text_field :duration %>
      Content:
      <% question_types = { S: "Single Choice", T: "Text", E: "Excercise"} %>
      <ol id="contentList">
        <%= f.fields_for :exam_details do |builder| %>
          <li>
            <%= builder.select :question_type, question_types.map{|type| [type[1], type[0]]} %>
            <%= builder.link_to_remove "delete" %>
          </li>
        <% end %>
        <%= f.link_to_add "Add new", :exam_details %>
      </ol>
      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>