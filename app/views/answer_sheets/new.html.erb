<% @title = "New Exam" %>

<h1> New Exam </h1>

<div class="row">
  <div class="span4">
    <%= form_for [current_user,@answer_sheet] do |f| %>
      <b> Subject </b>
      <%= f.collection_select :subject_id, Subject.all, :id, :name, 
        {selected: "1", :include_blank => "Please select"} 
      %>

      <b> Exam </b> 
      <%= f.collection_select :exam_id, {}, :id, :name %>

      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>


  </div>
</div>

<script>
$(document).ready(function(){
  $('#answer_sheet_subject_id').change(function(){
    getExamList();
  });
  getExamList();
});
</script>
