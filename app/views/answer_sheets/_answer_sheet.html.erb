<li>
  <span class="subject_name"><%= answer_sheet.exam.subject.name %>.</span>
  <span class="exam_name"> Exam: <%= answer_sheet.exam.name %></span>
  <span class="timestamp">
    Created at <%= answer_sheet.created_at %>.
  </span>
  <% if answer_sheet.end_time.nil? || answer_sheet.end_time > Time.now %>    
    <%= link_to "Start", edit_user_answer_sheet_path(current_user, answer_sheet) %>
    <%= answer_sheet.end_time.nil? ? "Not started yet" : ((answer_sheet.end_time-Time.now)/60).round.to_s + " minutes left." %>
  <% else %>
    <%= link_to "View", user_answer_sheet_path(current_user, answer_sheet) %>
  <% end %>  
</li>